<h1>Listing posts</h1>

<h2>Description</h2>


    <% @posts.each do |post| %>
        <p><%= post.postDesc %></p>
        <p><strong><%= post.user.name %></strong></p>
        <%= link_to 'Show', post %>
        <% if post.user == current_user %>
	        <%= link_to 'Edit', edit_post_path(post) %>
	        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
	    <% end %>
    <% end %>

<br>
<% if user_signed_in? %>
	<%= link_to 'New Post', new_post_path %>
<% end %>